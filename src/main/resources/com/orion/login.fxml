<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.GaussianBlur?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.orion.LoginController">
    
    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" preserveRatio="false">
        <image>
            <Image url="@spaceImage.jpg"/>
        </image>
    </ImageView>
    
    <!-- Login Content -->
        <VBox spacing="15" alignment="CENTER" maxWidth="400" style="-fx-background-color: rgba(160, 157, 157, 0.4); -fx-padding: 40; -fx-background-radius: 15; -fx-border-color: rgba(255, 255, 255, 0.2); -fx-border-width: 1; -fx-border-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 20, 0.5, 0, 5);">
            <!-- Title -->
            <Label text="Orion Code Editor" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
            <Label fx:id="titleLabel" text="Sign In" style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0; -fx-padding: 0 0 20 0;"/>
            
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username" style="-fx-text-fill: #ffffff;"/>
                <TextField fx:id="usernameField" 
                          promptText="Enter username"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #cccccc; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 8; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password" style="-fx-text-fill: #ffffff;"/>
                <PasswordField fx:id="passwordField" 
                              promptText="Enter password"
                              style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #cccccc; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 8; -fx-border-width: 1;"
                              onAction="#handleLogin"/>
            </VBox>
            
            <!-- Confirm Password Field (for signup) -->
            <VBox fx:id="confirmPasswordBox" spacing="5">
                <Label text="Confirm Password" style="-fx-text-fill: #ffffff;"/>
                <PasswordField fx:id="confirmPasswordField" 
                              promptText="Confirm password"
                              style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-text-fill: #ffffff; -fx-prompt-text-fill: #cccccc; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 8; -fx-border-width: 1;"
                              onAction="#handleSignup"/>
            </VBox>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" textFill="#ff6b6b" style="-fx-font-size: 12px;"/>
            
            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login" 
                    onAction="#handleLogin"
                    maxWidth="Infinity"
                    style="-fx-background-color: rgba(74, 158, 255, 0.8); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 8; -fx-border-width: 1; -fx-cursor: hand;"/>
            
            <!-- Signup Button -->
            <Button fx:id="signupButton" text="Sign Up" 
                    onAction="#handleSignup"
                    maxWidth="Infinity"
                    visible="false"
                    managed="false"
                    style="-fx-background-color: rgba(74, 158, 255, 0.8); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-radius: 8; -fx-border-width: 1; -fx-cursor: hand;"/>
            
            <!-- Toggle Button -->
            <Button fx:id="toggleButton" text="Don't have an account? Sign Up" 
                    onAction="#handleToggleMode"
                    maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: #88ccff; -fx-font-size: 12px; -fx-border-color: transparent; -fx-cursor: hand; -fx-underline: true;"/>
        </VBox>
    
</StackPane>
